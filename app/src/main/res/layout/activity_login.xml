<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="#FBFBFB">


    <Button
        android:id="@+id/back"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginHorizontal="0dp"
        android:layout_alignParentStart="true"
        app:icon="@drawable/ic_baseline_arrow_back_24"
        app:backgroundTint="#D57A74 "
        android:textColor="@color/black"
        />

    <ImageView
        android:id="@+id/signInImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:src="@drawable/signin_pic"


        />

    <TextView
        android:id="@+id/sign_in_to_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signInImage"
        android:layout_marginStart="55sp"
        android:layout_marginTop="24dp"
        android:text="Sign In To Continue"
        android:textColor="#DE4E45 "
        android:textSize="32sp"

        />

    <EditText
        android:id="@+id/emailfield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_in_to_continue"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:width="300dp"
        android:hint="Email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/passwordfield"
        android:layout_below="@+id/emailfield"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:width="300dp"
        android:hint="Password"
        />
    <Button
        android:id="@+id/forgetButton"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/passwordfield"
        android:layout_marginHorizontal="0dp"
        android:layout_alignEnd="@id/passwordfield"
        android:text="forget_password?"
        android:textSize="10sp"
        app:backgroundTint="#D57A74 "
        android:textColor="#000000"
        />
    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forgetButton"
        android:layout_marginHorizontal="20dp"
        android:layout_alignEnd="@id/passwordfield"
        android:layout_alignStart="@id/passwordfield"
        android:text="Log In"
        android:textSize="25sp"
        app:backgroundTint="#DE4E45 "
        android:textColor="#000000"
        />
    <Button
        android:id="@+id/registerButton"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/loginButton"
        android:layout_marginHorizontal="60dp"
        android:layout_alignEnd="@id/loginButton"
        android:layout_alignStart="@id/loginButton"
        android:text="New User?Sign Up"
        android:textSize="10sp"
        app:backgroundTint="#D57A74 "
        android:textColor="#000000"
        />





</RelativeLayout>
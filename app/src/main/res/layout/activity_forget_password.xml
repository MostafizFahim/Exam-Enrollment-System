<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgetPasswordActivity"
    android:background="#FBFBFB">
    <Button
        android:id="@+id/back"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="0dp"
        android:layout_alignParentStart="true"
        app:icon="@drawable/ic_baseline_arrow_back_24"
        app:backgroundTint="#010101"
        android:textColor="@color/black"
        />

    <ImageView
        android:id="@+id/recoverPasswordImage"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="104dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/forgot_logo"

        />

    <TextView
        android:id="@+id/recoverPasswordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recoverPasswordImage"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto"
        android:text="Recover Password"
        android:textColor="#445FC2 "
        android:textSize="32sp"

        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emailField"
        android:layout_below="@+id/recoverPasswordText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:width="300dp"
        android:hint="Email"
        android:layout_marginBottom="20dp"

        />

    <Button
        android:id="@+id/fButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailField"
        android:layout_marginHorizontal="20dp"
        android:layout_alignEnd="@id/emailField"
        android:layout_alignStart="@id/emailField"
        android:text="Send Recovery Mail"
        android:textSize="20sp"
        app:backgroundTint="#445FC2 "
        android:textColor="#000000"
        />

</RelativeLayout>